
///////////////////////////////////////////////////////////////////////////////
// Inputs
///////////////////////////////////////////////////////////////////////////////

struct LineVertex
{
    float3 position : POSITION;
    float4 rgba     : COLOR;
};

struct VertexShaderOutput
{
    float4 vpos : SV_POSITION;
    float4 rgba : COLOR;
};

cbuffer PerViewShaderConstants : register(b1)
{
    matrix view_proj_matrix;
};

///////////////////////////////////////////////////////////////////////////////
// Vertex Shader
///////////////////////////////////////////////////////////////////////////////

VertexShaderOutput VS_main(LineVertex input)
{
    VertexShaderOutput output;
    output.vpos = mul(view_proj_matrix, float4(input.position, 1.0f));
    output.rgba = input.rgba;
    return output;
}

///////////////////////////////////////////////////////////////////////////////
// Pixel Shader
///////////////////////////////////////////////////////////////////////////////

float4 PS_main(VertexShaderOutput input) : SV_TARGET
{
    return input.rgba;
}
